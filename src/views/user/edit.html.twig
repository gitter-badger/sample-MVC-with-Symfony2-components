{% extends 'layouts/base.layout.html' %}
{% block doc_title %} Edit User {% endblock %}

{% block content %}
	 <h1 class="content-subhead">edit user with the name of {{data.name}} </h1>
	<form class="pure-form pure-form-aligned" method="post" action="{{webroot}}/update-user/{{data.id}}">
		<fieldset>
		    <div class="pure-control-group">
		        <label for="name">Full Name</label>
		        <input id="name" name="name" type="text" value="{{data.name}}" >
		    </div>

		    <div class="pure-control-group">
		        <label for="name">Country</label>
		        <input id="name" name="country" type="text" value="{{data.country}}">
		    </div>

		    <div class="pure-control-group">
		        <label for="email">Email Address</label>
		        <input id="email" name="email" type="email" value="{{data.email}}">
		    </div>
		   <button type="submit" class="pure-button pure-button-primary">Update user</button>
		    </div>
			<input type="hidden" name="csrf_token" value="{{data.csrf_token}}">
		</fieldset>
	</form>

		{% block jquery %}

			{% if data.error_msg %}
				{{ parent() }}
				<script>
				$( document ).ready(function() {
				red_bar("{{data.error_msg}}"); 
				});
				</script>
			{% elseif data.warning_msg %}
				{{ parent() }}
				<script>
				$( document ).ready(function() {
				yellow_bar("{{data.warning_msg}}"); 
				});
				</script>	 
			{% elseif data.info_msg %}
				{{ parent() }}
				<script>
				$( document ).ready(function() {
				green_bar("{{data.info_msg}}"); 
				});
				</script>

			{% endif %}
		 
		{% endblock %}
{% endblock %}
 

